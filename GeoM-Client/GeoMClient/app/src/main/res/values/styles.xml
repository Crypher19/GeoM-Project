<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--Tema alertdialog in uso (sfondo chiaro, testo scuro)-->
    <style name="AppCompatAlertDialogStyleLight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- buttons -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- title -->
        <item name="android:textColor">@color/colorPrimary</item>
        <!-- message -->
        <item name="android:textColorPrimary">@color/customGrey</item>
        <!-- background -->
        <item name="android:background">#FFFFFF</item>
    </style>

    <!--Tema alertdialog opzionale (sfondo scuro, testo chiaro)-->
    <style name="AppCompatAlertDialogStyleDark" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

</resources>
