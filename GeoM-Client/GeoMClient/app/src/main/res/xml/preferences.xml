<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:title="@string/pref_wifi_only_title"
        android:defaultValue="false"
        android:summary="@string/pref_wifi_only_summary"
        android:key="wifiOnly" />
    <ListPreference
        android:title="Download Details"
        android:summary="Select the kind of data that you would like to download"
        android:key="downloadType"
        android:defaultValue="1"
        android:entries="@array/listArray"
        android:entryValues="@array/listValues" />
    <Preference
        android:title="@string/pref_reset_title"
        android:summary="@string/pref_reset_summary"
        android:key="resetAll"/>
</PreferenceScreen>